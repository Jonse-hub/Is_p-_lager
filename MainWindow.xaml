                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Click="lakrids_minus_click" Grid.Column="0" Content="-" Background="#000" Foreground="#fff" />
                    <TextBox x:Name="lakrids_antal" Text="100" Grid.Column="1" Background="#000" Foreground="#fff" TextAlignment="Center" />
                    <Button Click="lakrids_plus_click" Grid.Column="2" Content="+" Background="#000" Foreground="#fff" />

